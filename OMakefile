.PHONY: makelib testlib install clean

.SUBDIRS: tests

OCAMLFLAGS = -g

FILES = mltls
LIB = mltls

section
   INCLUDES += $(shell $(OCAMLC) -where)
   mltls_stub$(EXT_OBJ):

CLIBNAME = libmltls_stub

section
   CCLIB = $(StaticCLibrary $(CLIBNAME), mltls_stub)
   OCAML_LIB_FLAGS += -cclib -lssl -cclib -lmltls_stub
   OCAMLLIBS = $(OCamlLibrary $(LIB), $(FILES))
   $(OCAMLLIBS): $(CCLIB)
   .DEFAULT: $(LIB)$(EXT_LIB)

open ../../config

IFILES[] =
   mltls

ALIBS[] = $(CLIBNAME)$(EXT_LIB)

LibInstall(makelib, $(LIB), $(IFILES), $(ALIBS))

install: makelib

clean:
   $(CLEAN)
